{
    "app-id" : "dev.tchx84.Portfolio",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "40",
    "sdk" : "org.gnome.Sdk",
    "separate-locales": false,
    "command" : "dev.tchx84.Portfolio",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--filesystem=home",
        "--filesystem=/media",
        "--filesystem=/run/media",
        "--filesystem=xdg-run/gvfs",
        "--filesystem=xdg-run/gvfsd",
        "--talk-name=org.gtk.vfs",
        "--talk-name=org.gtk.vfs.*",
        "--talk-name=org.freedesktop.Flatpak",
        "--own-name=org.freedesktop.FileManager1"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "gvfsd-trash",
            "builddir" : true,
            "buildsystem" : "meson",
            "config-opts": [
		"-Dsystemduserunitdir=no",
		"-Dtmpfilesdir=no",
		"-Dadmin=false",
		"-Dafc=false",
		"-Dafp=false",
		"-Darchive=false",
		"-Dcdda=false",
		"-Ddnssd=false",
		"-Dgoa=false",
		"-Dgoogle=false",
		"-Dgphoto2=false",
		"-Dhttp=false",
		"-Dmtp=false",
		"-Dnfs=false",
		"-Dsmb=false",
		"-Dudisks2=false",
		"-Dbluray=false",
		"-Dfuse=false",
		"-Dgcr=false",
		"-Dgcrypt=false",
		"-Dgudev=false",
		"-Dkeyring=false",
		"-Dlogind=false",
		"-Dlibusb=false",
		"-Ddevel_utils=false",
		"-Dinstalled_tests=false",
		"-Dman=false"
             ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://download-fallback.gnome.org/sources/gvfs/1.48/gvfs-1.48.1.tar.xz",
                    "sha256": "b2ea4f271aad2711f16b43c03151e2ec5a9874ff1a21142ef6d6406486a19dc2"
                }
            ]
        },
        {
            "name" : "portfolio",
            "builddir" : true,
            "buildsystem" : "meson",
            "config-opts": [
                "-Dservice_filename=org.freedesktop.FileManager1.service"
             ],
            "sources" : [
                {
                    "type" : "git",
                    "path" : ".",
                    "branch": "HEAD"
                }
            ]
        }
    ]
}
