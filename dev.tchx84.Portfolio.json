{
    "app-id" : "dev.tchx84.Portfolio",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "40",
    "sdk" : "org.gnome.Sdk",
    "separate-locales": false,
    "command" : "dev.tchx84.Portfolio",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--filesystem=home",
        "--filesystem=/media",
        "--filesystem=/run/media",
        "--talk-name=org.gtk.vfs",
        "--talk-name=org.gtk.vfs.*",
        "--own-name=org.freedesktop.FileManager1"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name": "libhandy",
            "buildsystem": "meson",
            "config-opts": [
                "-Dgtk_doc=false",
                "-Dtests=false",
                "-Dexamples=false",
                "-Dvapi=false",
                "-Dglade_catalog=disabled"
            ],
            "cleanup": [
                "/include",
                "/lib/pkgconfig"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/libhandy/1.0/libhandy-1.0.2.tar.xz",
                    "sha256": "3ad78d0594165c7e8150f662506d386552825e693aa3679744af96bd94dc1c2d"
                }
            ]
        },
        {
            "name" : "portfolio",
            "builddir" : true,
            "buildsystem" : "meson",
            "config-opts": [
                "-Dservice_filename=org.freedesktop.FileManager1.service",
             ],
            "sources" : [
                {
                    "type" : "git",
                    "path" : ".",
                    "branch": "HEAD"
                }
            ]
        }
    ]
}
